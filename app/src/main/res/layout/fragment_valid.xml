<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_margin="@dimen/dimen_16"
        android:background="@color/transparent">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:indeterminateTint="@color/green1"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            />

        <TextView
            android:id="@+id/document_valid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:text="Document valid"
            android:textSize="24sp"
            app:drawableTopCompat="@drawable/valid" />

    </RelativeLayout>
    <TextView
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_4"
        android:textSize="12sp"
        android:drawableStart="@drawable/group"
        android:text="@string/radiotext"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:background="@color/grey"
        android:alpha="0.5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Document information"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        />
    <TextView
        android:text="Import document"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="File name"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:background="@color/grey"
        android:alpha="0.5"
        />
    <TextView
        android:text="Format"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="pdf"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:background="@color/grey"
        android:alpha="0.5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Content"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:orientation="vertical">
    <TextView
        android:text="File name"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="1000KB"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/colorPrimary" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:background="@color/grey"
        android:alpha="0.5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Action"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        />
    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_32"
        android:background="@drawable/btn_continue"
        android:text="Upload for signing"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>