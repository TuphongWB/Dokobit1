<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_linkcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link card"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_4"
            android:paddingBottom="@dimen/dimen_8"
            />

        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_8"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginBottom="@dimen/dimen_8"
        />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
            android:background="@color/light_blue_900">

            <TextView
                android:id="@+id/alias_email_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Please wait while the content loads." />

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminate="true"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/dimen_16">

        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32"
            android:background="@drawable/btn_button"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:layout_toStartOf="@+id/dialog_btn_linkcard"
            android:textAllCaps="false"
            android:layout_marginEnd="@dimen/dimen_8"/>

        <Button
            android:id="@+id/dialog_btn_linkcard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32"
            android:text="Link card"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_continue"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</LinearLayout>